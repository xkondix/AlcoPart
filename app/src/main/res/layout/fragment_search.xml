<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context=".fragments.SearchFragment">

    <EditText
        android:id="@+id/wyszukaj_nazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="@string/wyszukaj_nazwa"/>


    <EditText
        android:id="@+id/wyszukaj_pojemnosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/wyszukaj_pojemnosc"/>

    <Spinner
        android:id="@+id/wyszukaj_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:drawSelectorOnTop="true"
        android:entries="@array/wyszukaj_alco">

    </Spinner></LinearLayout>